<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.apptrumps.apptrumps.ui.ChooseConnectionType">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_wifi_p2p"
            style="@style/main_menu_cards"
            android:text="WIFI P2P\n(no internet access required)"
            />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_connect_mobile_data"
            style="@style/main_menu_cards"
            android:text="Mobile data"
           />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_connect_bluetooth"
            style="@style/main_menu_cards"
            android:text="Bluetooth"
           />
    </android.support.v7.widget.CardView>
</LinearLayout>
