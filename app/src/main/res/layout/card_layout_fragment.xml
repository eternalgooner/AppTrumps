<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_card_layout">


    <!--  main photo view    -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginBottom="1dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/card_name"/>
    </android.support.v7.widget.CardView>


    <!--  STATS & INFO SECTION   -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginBottom="1dp"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="1dp"
                app:cardElevation="8dp">

                <TextView
                   style="@style/buttonSelected"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:text="STATS"
                    android:text="STATS"
                    android:id="@+id/card_stats"
                    android:gravity="center"/>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardElevation="1dp">

                <TextView
                   style="@style/buttonUnselected"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:text="INFO"
                    android:text="INFO"
                    android:id="@+id/card_info"
                    android:gravity="center"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v7.widget.CardView>



    <!--  height attribute    -->
    <android.support.v7.widget.CardView
        android:id="@+id/cv_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
               style="@style/card_textview_category"
                android:text="Height"
                android:layout_weight="2"
                android:background="@drawable/gradient_cat_1"/>

            <TextView
                style="@style/card_textview_attribute"
                android:id="@+id/card_height"
                android:background="@drawable/gradient_cat_1"
                android:layout_weight="1"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <!--  weapons attribute    -->
    <android.support.v7.widget.CardView
        android:id="@+id/cv_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:background="@drawable/gradient_cat_2"
                style="@style/card_textview_category"
                android:text="Weapons"
                android:layout_weight="2" />

            <TextView
                android:background="@drawable/gradient_cat_2"
                style="@style/card_textview_attribute"
                android:id="@+id/card_weapons"
                android:layout_weight="1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <!--  humour attribute    -->
    <android.support.v7.widget.CardView
        android:id="@+id/cv_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:background="@drawable/gradient_cat_3"
                style="@style/card_textview_category"
                android:text="Humour"
                android:layout_weight="2" />

            <TextView
                android:background="@drawable/gradient_cat_3"
                style="@style/card_textview_attribute"
                android:id="@+id/card_humour"
                android:layout_weight="1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!--  intelligence attribute    -->
    <android.support.v7.widget.CardView
        android:id="@+id/cv_4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:background="@drawable/gradient_cat_4"
                style="@style/card_textview_category"
                android:text="Intelligence"
                android:layout_weight="2" />

            <TextView
                android:background="@drawable/gradient_cat_4"
                style="@style/card_textview_attribute"
                android:id="@+id/card_intelligence"
                android:layout_weight="1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <!--  athleticism attribute    -->
    <android.support.v7.widget.CardView
        android:id="@+id/cv_5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:background="@drawable/gradient_cat_5"
                style="@style/card_textview_category"
                android:text="Athleticism"
                android:layout_weight="2" />

            <TextView
                android:background="@drawable/gradient_cat_5"
                style="@style/card_textview_attribute"
                android:id="@+id/card_athleticism"
                android:layout_weight="1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <!--   INFO TEXTVIEW   -->
    <android.support.v7.widget.CardView
        android:id="@+id/cv_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/card_textview_category"
            android:id="@+id/card_textview_info"/>

    </android.support.v7.widget.CardView>

</LinearLayout>