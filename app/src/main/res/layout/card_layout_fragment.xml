<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_category_background"
    android:id="@+id/fragment_card_layout">


    <!--  main photo view    -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginBottom="1dp">

        <!--  main image on card -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_main_image"
            android:id="@+id/card_image"/>

        <!--  Name of card -->
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <!--  top trump icon -->
        <ImageView
            android:id="@+id/top_trump_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/star_big_on"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:visibility="gone"/>

        <!--  player turn -->
        <TextView
            android:id="@+id/txt_player_turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:textStyle="bold"
            android:gravity="bottom"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="10dp"
            android:drawableEnd="@drawable/green_tick_icon"
            android:text="Your turn: "
            android:textSize="20sp"/>

        <!--  number of cards -->
        <TextView
            android:id="@+id/txt_num_cards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:textStyle="bold"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"/>
    </android.support.v7.widget.CardView>



    <!--  STATS & INFO SECTION   -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginBottom="1dp"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="1dp"
                app:cardElevation="4dp">

                <!--  button selected   -->
                <Button
                    android:background="@drawable/button_custom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:text="STATS"
                    android:text="STATS"
                    android:id="@+id/card_stats"
                    android:gravity="center"/>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardElevation="4dp">

                <!--  button unselected   -->
                <Button
                    android:background="@drawable/button_custom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:text="INFO"
                    android:text="INFO"
                    android:id="@+id/card_info"
                    android:gravity="center"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v7.widget.CardView>



    <!--  height attribute    -->
    <android.support.v7.widget.CardView
        style="@style/category_cardview"
        android:layout_marginTop="3dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/cv_1"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
               style="@style/card_textview_category"
                android:text="Height"
                android:layout_weight="2"
                android:background="@drawable/gradient_cat_1"/>

            <TextView
                style="@style/card_textview_attribute"
                android:id="@+id/card_height"
                android:background="@drawable/gradient_cat_1"
                android:layout_weight="1"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <!--  weapons attribute    -->
    <android.support.v7.widget.CardView
        style="@style/category_cardview"
        app:cardCornerRadius="20dp"
        android:id="@+id/cv_2"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:background="@drawable/gradient_cat_1"
                style="@style/card_textview_category"
                android:text="Weapons"
                android:layout_weight="2" />

            <TextView
                android:background="@drawable/gradient_cat_1"
                style="@style/card_textview_attribute"
                android:id="@+id/card_weapons"
                android:layout_weight="1"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <!--  humour attribute    -->
    <android.support.v7.widget.CardView
        android:id="@+id/cv_3"
        app:cardCornerRadius="20dp"
        style="@style/category_cardview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:background="@drawable/gradient_cat_1"
                style="@style/card_textview_category"
                android:text="Humour"
                android:layout_weight="2" />

            <TextView
                android:background="@drawable/gradient_cat_1"
                style="@style/card_textview_attribute"
                android:id="@+id/card_humour"
                android:layout_weight="1"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!--  intelligence attribute    -->
    <android.support.v7.widget.CardView
        app:cardCornerRadius="20dp"
        android:id="@+id/cv_4"
        style="@style/category_cardview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:background="@drawable/gradient_cat_1"
                style="@style/card_textview_category"
                android:text="Intelligence"
                android:layout_weight="2" />

            <TextView
                android:background="@drawable/gradient_cat_1"
                style="@style/card_textview_attribute"
                android:id="@+id/card_intelligence"
                android:layout_weight="1"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <!--  athleticism attribute    -->
    <android.support.v7.widget.CardView
        app:cardCornerRadius="20dp"
        android:id="@+id/cv_5"
        style="@style/category_cardview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:background="@drawable/gradient_cat_1"
                style="@style/card_textview_category"
                android:text="Athleticism"
                android:layout_weight="2" />

            <TextView
                android:background="@drawable/gradient_cat_1"
                style="@style/card_textview_attribute"
                android:id="@+id/card_athleticism"
                android:layout_weight="1"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <!--   INFO TEXTVIEW   -->
    <android.support.v7.widget.CardView
        android:layout_marginTop="14dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/cv_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:visibility="gone">

        <TextView
            android:background="@drawable/gradient_cat_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/card_textview_category"
            android:id="@+id/card_textview_info"/>

    </android.support.v7.widget.CardView>

</LinearLayout>